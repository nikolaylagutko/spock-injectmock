<?xml version="1.0"?>
<ruleset name="ExampleRuleset"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

    <description>
        This ruleset should turn off UselessParentheses
    </description>

    <rule ref="rulesets/java/naming.xml">
        <exclude name="LongVariable"/>
    </rule>
    
    <rule name="LongVariable"
   		language="java"
  		  since="0.3"
        message="Avoid excessively long variable names like {0}"
        class="net.sourceforge.pmd.lang.rule.XPathRule"
          externalInfoUrl="http://pmd.sourceforge.net/pmd-5.2.3/pmd-java/rules/java/naming.html#LongVariable">
      <priority>3</priority>
      <properties>
          <property name="minimum" type="Integer" description="The variable length reporting threshold" min="1" max="100" value="30"/>
      </properties>
     </rule>


</ruleset>